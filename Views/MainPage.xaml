<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RarezItemWebScraper.Views.MainPage"
             Title="">

    <Grid RowDefinitions="Auto,*,Auto"
          BackgroundColor="#19171a">

        <!-- Sticky Top Menu Bar -->
        <Grid Grid.Row="0"
              BackgroundColor="#2C2C2E"
              HeightRequest="54"
              ColumnDefinitions="*,*,*,*">
            <Border Grid.Column="0"
                    Background="Transparent">
                <Button Text="Home"
                        StyleClass="MenuBarButton"
                        Clicked="OnHomeClicked"/>
            </Border>
            <Border Grid.Column="1"
                    Background="Transparent">
                <Button Text="Products"
                        StyleClass="MenuBarButton"
                        Clicked="OnProductsClicked"/>
            </Border>
            <Border Grid.Column="2"
                    Background="Transparent">
                <Button Text="Search"
                        StyleClass="MenuBarButton"
                        Clicked="OnSearchClicked"/>
            </Border>
            <Border Grid.Column="3"
                    Background="Transparent">
                <Button Text="Account"
                        StyleClass="MenuBarButton"
                        Clicked="OnAccountClicked"/>
            </Border>
        </Grid>

        <!-- Main Content -->
        <CollectionView
            Grid.Row="1"
            x:Name="ProductsView"
            ItemsSource="{Binding FilteredProducts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Stroke="#B4B4B4"
                        StrokeThickness="1"
                        Background="#232226"
                        Margin="10,6"
                        StrokeShape="RoundRectangle 18">
                        <VerticalStackLayout Padding="12"
                                             Spacing="7">
                            <Image
                                Source="{Binding ImageUrl}"
                                HeightRequest="120"
                                WidthRequest="120"
                                Aspect="AspectFill"
                                BackgroundColor="#18171B"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image"
                                                 Binding="{Binding ImageUrl}"
                                                 Value="">
                                        <Setter Property="Source"
                                                Value="dotnet_bot.png"/>
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>
                            <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="Medium"
                                   TextColor="#FFF"
                                   LineBreakMode="WordWrap"/>
                            <Label Text="{Binding Price}"
                                   TextColor="#A2FF86"
                                   FontSize="Medium"
                                   FontAttributes="Bold"/>
                            <Label Text="{Binding Url}"
                                   TextColor="#6DABF8"
                                   LineBreakMode="TailTruncation"/>
                        </VerticalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenLinkCommand}"/>
                        </Border.GestureRecognizers>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Sticky Bottom Filter Bar -->
        <Border Grid.Row="2"
                Background="#2C2C2E"
                Padding="0"
                StrokeShape="Rectangle">
            <Grid ColumnDefinitions="*">
                <SearchBar x:Name="ProductSearchBar"
                           Grid.Column="0"
                           Placeholder="Filter products..."
                           Text="{Binding SearchText}"
                           FontSize="18"
                           BackgroundColor="#232226"
                           TextColor="#FFF"
                           CancelButtonColor="#AAA"
                           Margin="8,0"
                           SearchButtonPressed="OnFilterSearchPressed"
                           TextChanged="OnSearchTextChanged"/>
                <!-- Add more filter controls in new columns as needed -->
            </Grid>
        </Border>

    </Grid>
</ContentPage>
