<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RarezItemWebScraper.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30"
                             Spacing="16">
            <Label Text="Enter a URL:"
                   FontSize="18"/>
            <Entry x:Name="UrlEntry"
                   Placeholder="https://www.popmart.nz/collections/products?sort_by=created-ascending"
                   Text="https://www.popmart.nz/collections/products?sort_by=created-ascending"/>
            <Button Text="Scrape Title"
                    Clicked="OnScrapeButtonClicked"/>
            <Label Text="Result:"
                   FontAttributes="Bold"/>
            <Label x:Name="ResultLabel"
                   FontSize="14"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
